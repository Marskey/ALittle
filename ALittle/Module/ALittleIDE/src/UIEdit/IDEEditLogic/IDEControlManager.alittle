	public fun HandleControlRightMenuFlagQuickText(ALittle.UIEvent event)
	{
		A_LayerManager.HideFromRight(this._control_right_menu);
		var target:ALittle.DisplayObject = this._control_right_menu._user_data;
		this._control_right_menu._user_data = null;

		var user_data:IDEControlItemUserData = target._user_data;
		g_IDEQuickManager.FlagText(user_data.control_info.name);
	}
	
