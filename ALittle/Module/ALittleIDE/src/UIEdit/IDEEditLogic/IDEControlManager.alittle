	// 运行控件
	public fun ControlRunImpl(string name)
	{
		var debug = new Map<string, any>();
		debug["title"] = name;
		debug["window_width"] = g_IDEProject.project.config.GetConfig("default_show_width", 800);
		debug["window_height"] = g_IDEProject.project.config.GetConfig("default_show_height", 600);
		debug["ui_name"] = name;
		debug["module_name"] = g_IDEProject.project.name;
		var debug_str = lua.json.encode(debug);
		debug_str = "\""..ALittle.String_Replace(debug_str, "\"", "\\\"").."\"";

		lua.os.execute("start ALittleClientWin32.exe "..debug_str.." "..g_IDEProject.project.name.." Engine/MainTemplate/UIViewer");
	}
	
