	public fun ControlRenameImpl(ALittle.DisplayObject target)
	{
		var user_data:IDEControlItemUserData = target._user_data;
		var name = user_data.control_info.name;
		var result, content = g_IDEProject.CanDelete(name);
		if (result == false)
		{
			g_IDETool.ShowNotice("错误", content);
			return;
		}
		result, content = g_IDETabManager.CanDelete(name);
		if (result == false)
		{
			g_IDETool.ShowNotice("错误", content);
			return;
		}
	
		var x, y = target.LocalToGlobal();
		var callback = bind(this.ControlRename, this, target, name);
		g_IDETool.ShowRename(callback, name, x, y, target.width);
	}
	
