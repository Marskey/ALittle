	// 复制控件信息
	public fun ControlCopyInfo(string target_name, string new_name)
	{
		var result, content = IDEUtility_CheckName(new_name);
		if (result == false)
		{
			g_IDETool.ShowNotice("错误", content);
			return;
		}
		var info = g_IDEProject.project.control_map[new_name];
		if (info != null)
		{
			g_IDETool.ShowNotice("错误", "控件名已存在:"..new_name);
			return;
		}
		info = g_IDEProject.project.control_map[target_name];
		if (info == null)
		{
			g_IDETool.ShowNotice("错误", "控件不存在:"..target_name);
			return;
		}
		g_IDEProject.SaveControl(new_name, ALittle.String_CopyTable(info.info));
		info = g_IDEProject.project.control_map[new_name];
		if (info == null)
		{
			g_IDETool.ShowNotice("错误", "控件新建失败:"..new_name);
			return;
		}
		// 直接打开这个控件
		g_IDETabManager.StartEditControlBySelect(new_name, info.info);
	}
	
	// 修改控件名
	public fun ControlRename(ALittle.DisplayObject target, string old_name, string new_name)
	{
		// 检查是否有修改
		if (old_name == new_name) return;
		// 重命名
		var result, content = g_IDEProject.RenameControl(old_name, new_name);
		if (result == false)
		{
			g_IDETool.ShowNotice("错误", content);
			return;
		}
	
		target.text = new_name;
	
		// 检查有没有正在编辑的控件
		var tab = g_IDETabManager.GetTabByName(old_name);
		if (tab == null) return;
		var tab_child:IDETabChild = tab._user_data;
		tab_child.Rename(new_name);
	}
	
