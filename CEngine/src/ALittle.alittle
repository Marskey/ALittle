public static __ALITTLEAPI_SetupMainModule(string base_path, string debug, string module_name, string sengine_path, string modules) : bool
{
    A_AudioSystem.Setup();
    return A_ModuleSystem.MainSetup(base_path, debug, module_name, sengine_path, modules);
}
// 释放核心模块资源
public static __ALITTLEAPI_ShutdownMainModule()
{
