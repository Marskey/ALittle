// 客户端连接服务端，成功
public static __ALITTLEAPI_ConnectSucceed(ALittle.IMsgCommonNative msg_interface)
{
    var client = ALittle.FindMsgSender(msg_interface.GetID());
    if (client ==  null) return;
    client.HandleConnectSucceed();
}

// 断开连接
public static __ALITTLEAPI_Disconnect(ALittle.IMsgCommonNative msg_interface)
{
    var client = ALittle.FindMsgSender(msg_interface.GetID());
    if (client ==  null) return;
    client.HandleDisconnect();
}

// 客户端链接服务端，失败
public static __ALITTLEAPI_ConnectFailed(ALittle.IMsgCommonNative msg_interface)
{
    var client = ALittle.FindMsgSender(msg_interface.GetID());
    if (client ==  null) return;
    client.HandleConnectFailed(null);
}

// 收到服务端发来的数据包
public static __ALITTLEAPI_Message(int id, int rpc_id, ALittle.IMessageReadFactory factory, ALittle.IMsgCommonNative msg_interface)
{
    var client = ALittle.FindMsgSender(msg_interface.GetID());
    if (client ==  null) return;
    
    client.HandleMessage(id, rpc_id, factory);
}

